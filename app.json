{
  "expo": {
    "name": "tasks",
    "slug": "tasks",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "assets/vecteezy_checklist.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "scheme": "com.magicmarinac.tasks",
    "ios": {
      "bundleIdentifier": "com.magicmarinac.tasks",
      "supportsTablet": true
    },
    "android": {
      "package": "com.magicmarinac.tasks",
      "adaptiveIcon": {
        "foregroundImage": "assets/vecteezy_checklist.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      "@react-native-community/datetimepicker",
      [
        "android-glance-widget-expo",
        {
          "glanceVersion": "1.1.1",
          "kotlinVersion": "2.0.0",
          "widgets": [
            {
              "widgetClassName": "Home",
              "configurationActivity": "HomeWidgetConfigurationActivity",
              "widgetProviderInfo": {
                "description": "Task list widget",
                "updatePeriodMillis": 1800000,
                "minWidth": "250dp",
                "minHeight": "110dp",
                "targetCellWidth": "3",
                "targetCellHeight": "2",
                "maxResizeWidth": "400dp",
                "maxResizeHeight": "300dp",
                "resizeMode": "horizontal|vertical",
                "widgetCategory": "home_screen"
              }
            }
          ]
        }
      ],
      "expo-font",
      "expo-web-browser"
    ],
    "splash": {
      "image": "assets/vecteezy_checklist.png",
      "resizeMode": "contain",
      "backgroundColor": "#000000"
    },
    "extra": {
      "eas": {
        "projectId": "e5d392f8-451d-40ba-b9de-6ac26f027771"
      }
    }

  }
}
