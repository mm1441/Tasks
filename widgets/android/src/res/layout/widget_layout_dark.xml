<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_layout_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/transparent"
    android:padding="8dp">
    
    <!-- Header with dropdown, + button, and blue underline (solid background) -->
    <LinearLayout
        android:id="@+id/widget_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#1E1E1E"
        android:layout_marginBottom="0dp">
        
        <!-- Header row: dropdown + spacer + add button -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">
        
        <!-- Task list dropdown with chevron -->
        <LinearLayout
            android:id="@+id/task_list_dropdown_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="8dp"
            android:background="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true">
            
            <TextView
                android:id="@+id/task_list_dropdown"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="My List"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:gravity="start|center_vertical" />
            
            <!-- Chevron down icon - positioned close to end of text -->
            <ImageView
                android:id="@+id/chevron_icon"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_chevron_down_white"
                android:contentDescription="Select task list"
                android:layout_marginStart="8dp" />
        </LinearLayout>
        
        <!-- Spacer: tap to open HomeScreen (FrameLayout - View not supported by RemoteViews) -->
        <FrameLayout
            android:id="@+id/header_open_home"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:focusable="true" />
        
        <!-- + button -->
        <ImageButton
            android:id="@+id/add_task_button"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_add_white"
            android:background="?android:attr/selectableItemBackground"
            android:contentDescription="Add task"
            android:padding="8dp" />
        </LinearLayout>
        
        <!-- Blue underline - part of header -->
        <FrameLayout
            android:id="@+id/header_underline"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#0084FF" />
    </LinearLayout>
    
    <!-- Content area below header (semi-transparent background) -->
    <LinearLayout
        android:id="@+id/widget_content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:background="#E61E1E1E"
        android:padding="8dp">
        
        <!-- Task list (scrollable) - dark divider for dark theme -->
        <ListView
            android:id="@+id/list_view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:dividerHeight="1dp"
            android:divider="@drawable/divider_dark"
            android:scrollbars="vertical"
            android:fadeScrollbars="false"
            android:descendantFocusability="blocksDescendants" />

        <!-- Empty view -->
        <TextView
            android:id="@+id/empty_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="No tasks"
            android:textColor="#999999"
            android:textSize="14sp"
            android:gravity="center"
            android:padding="16dp"
            android:visibility="gone"/>
    </LinearLayout>
</LinearLayout>
